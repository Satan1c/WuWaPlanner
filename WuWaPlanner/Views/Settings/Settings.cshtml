@using Microsoft.AspNetCore.Mvc.TagHelpers
@model WuWaPlanner.Models.SettingsViewModel
@{
	ViewData["Title"] = "Settings";
}

<div>
	@if (Model.IsAuthorized)
	{
		<a class="nav-link text-light" asp-area="" asp-controller="Settings" asp-action="Logout">Logout</a>
	}
	else
	{
		<a class="nav-link text-light" asp-area="" asp-controller="Settings" asp-action="GoogleLogin">Login</a>
	}
</div>