@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model WuWaPlanner.Models.SettingsViewModel
@inject IViewLocalizer                                       Localizer
@{
	ViewData["Title"] = "Settings";
}

<div>
	@if (Model.IsAuthorized)
	{
		<a class="nav-link text-light" asp-area="" asp-controller="Settings" asp-action="Logout">@Localizer["LogoutText"]</a>
	}
	else
	{
		<a class="nav-link text-light" asp-area="" asp-controller="Settings" asp-action="GoogleLogin">@Localizer["LoginText"]</a>
	}
</div>